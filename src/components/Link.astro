---
interface Props {
	href: string;
    newWindow?: boolean;
    hoverEffect?: boolean;
}

const { href, newWindow, hoverEffect } = Astro.props;
---
{newWindow ? 
<a href={href} onclick="window.open(this.href, '_blank'); return false;" class={hoverEffect ? "hover link" : "link"}>
    <slot/>
</a>
:
<a href={href} class={hoverEffect ? "hover link" : "link"}>
    <slot/>
</a>
}

<style>
    a {
        color: white;
        text-decoration: none;
        border-bottom-width: 1px;
        border-bottom-style: solid;
        border-bottom-color: rgba(255, 255, 255, 0);
        transition: border-bottom-color .2s ease-in;
    }
    a:hover {
        color: white;
    }
    .hover:hover {
        border-bottom-color: rgba(255, 255, 255, 255);
    }
</style>